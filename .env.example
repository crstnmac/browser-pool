# Application
NODE_ENV=development
PORT=3000
# IMPORTANT: Set this in production to enable CORS
# Comma-separated list of allowed origins, use *.domain.com for wildcards
ORIGIN_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/browser_pool?schema=public

# Redis (optional - for distributed rate limiting)
# If not set, will fall back to in-memory rate limiting
# RECOMMENDED for production: ensures rate limiting works across multiple servers
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=change-this-to-a-random-secret-key-in-production
API_KEY_PREFIX=bp_

# Rate Limiting (requests per minute per user)
RATE_LIMIT_FREE=5
RATE_LIMIT_PRO=30
RATE_LIMIT_ENTERPRISE=100

# IP-Based Rate Limiting (requests per minute per IP)
IP_RATE_LIMIT=1000

# Quotas (requests per month)
QUOTA_FREE=100
QUOTA_PRO=5000
QUOTA_ENTERPRISE=100000

# Security Configuration
# Maximum request body size in bytes (default: 1MB)
MAX_BODY_SIZE=1048576

# Request timeout in milliseconds (default: 30s)
REQUEST_TIMEOUT=30000

# Dodo Payments (https://dodo.com)
DODO_API_KEY=your-dodo-api-key
DODO_WEBHOOK_SECRET=your-dodo-webhook-secret
DODO_PRICE_ID_PRO=price_pro_monthly
DODO_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# Browser Pool Configuration
BROWSER_POOL_SIZE=5
BROWSER_IDLE_TIMEOUT=300000

# Email Configuration
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Browser Pool <noreply@browserpool.com>

# Migration Configuration (for scripts/migrate-security-fields.ts)
# Uncomment these when running the migration script
# AUTO_GENERATE_NEW_KEYS=true
# REVOKE_OLD_KEYS=true
