# Development Container Environment Variables
# Copy to .env in devcontainer if you need to override defaults

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/browser_pool?schema=public

# Redis
REDIS_URL=redis://redis:6379

# Application
NODE_ENV=development
PORT=3000
ORIGIN_URL=http://localhost:3000

# Authentication
JWT_SECRET=dev-secret-change-in-production
API_KEY_PREFIX=bp_

# Rate Limiting
RATE_LIMIT_FREE=5
RATE_LIMIT_PRO=30
RATE_LIMIT_ENTERPRISE=100
IP_RATE_LIMIT=1000

# Quotas
QUOTA_FREE=100
QUOTA_PRO=5000
QUOTA_ENTERPRISE=100000

# Security
MAX_BODY_SIZE=1048576
REQUEST_TIMEOUT=30000

# Email (optional for dev)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Browser Pool <noreply@browserpool.com>

# Dodo Payments (optional for dev)
DODO_API_KEY=dev-key
DODO_API_URL=https://api.dodo.com/v1
DODO_WEBHOOK_SECRET=dev-secret
DODO_PRICE_ID_PRO=price_pro_monthly
DODO_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# Browser Pool
BROWSER_POOL_SIZE=5
BROWSER_IDLE_TIMEOUT=300000
